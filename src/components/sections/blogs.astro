---
import { blogs_section } from "@/data/site.content.json";

const { description, heading, blogs } = blogs_section;
---

<section class="block-padding space-y-4" id="blog">
  <h2 class="max-w-[15ch]" set:html={heading} />
  <p class="">{description}</p>

  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-10">
    {
      blogs.map((blog) => (
        <li class="bg-zinc-800 flex flex-col rounded-2xl">
          <div class="w-full h-72 overflow-hidden rounded-t-2xl">
            <img
              src={blog.cover_img}
              alt={blog.title}
              class="object-cover object-center"
            />
          </div>
          <div class="px-4 py-5">
            <div class="flex justify-between items-center">
              <small class="text-sm text-zinc-400 capitalize">{blog.publish_date}</small>
              <small class="text-sm text-zinc-400">
                {blog.time_to_read} minutes to read
              </small>{" "}
            </div>
            <h5 class="text-2xl text-zinc-200 capitalize mt-2">{blog.title}</h5>
          </div>
        </li>
      ))
    }
  </ul>
</section>
