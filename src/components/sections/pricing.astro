---
import { pricing_section } from "@/data/site.content.json";
import { CheckCheckIcon } from "@lucide/astro";

const { heading, description, plans } = pricing_section;
---

<section class="block-padding flex flex-col gap-8" id="pricing">
  <h2 class="" set:html={heading} />
  <p class="">{description}</p>

  <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      plans.map((plan) => (
        <li
          class={`py-14 px-8 flex flex-col justify-center ${plan.isRecommended ? "bg-emerald-600 outline-4 outline-emerald-800" : "bg-zinc-800 scale-y-90"}`}
        >
          <strong class="text-zinc-100 font-bold capitalize">
            {plan.plan_name}
          </strong>
          <h4 class="text-3xl text-zinc-200 my-2 font-bold">
            ${plan.plan_price}/mo
          </h4>

          <ul class="space-y-2.5 my-6">
            {plan.availaable_features.map((af) => (
              <li class="text-zinc-200 flex items-center gap-3">
                <CheckCheckIcon class="text-zinc-300" />
                <span class="first-letter:uppercase">{af}</span>
              </li>
            ))}
          </ul>

          <a
            href="/"
            class={`text-lg  outline-1 ${plan.isRecommended ? "outline-transparent bg-emerald-100 text-emerald-600" : "outline-emerald-800 text-zinc-100"} capitalize py-2 px-4 justify-self-end w-full text-center`}
          >
            get started
          </a>
        </li>
      ))
    }
  </ul>
</section>
