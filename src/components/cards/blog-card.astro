---
import { slugify } from "@/utils/formatter";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { readingTime } from "reading-time-estimator";

import noImage from "/images/glass-star.png";

interface Props {
  blog: CollectionEntry<"blog">;
}

const {
  blog: { data, body },
} = Astro.props;

const { heroImage, publishDate, title } = data;
---

<li class="bg-zinc-100 dark:bg-zinc-800 flex flex-col rounded-2xl">
  <div class="w-full h-72 overflow-hidden rounded-t-2xl">
    {
      heroImage ? (
        <Image
          src={heroImage}
          alt={title}
          class="object-cover object-center size-full"
          fit="cover"
        />
      ) : // <Image
      //   src={noImage}
      //   alt={title}
      //   class="object-cover object-center size-full"
      //   fit="cover"
      // />
      null
    }
  </div>
  <div class="px-4 py-5">
    <div class="flex justify-between items-center">
      <small class="text-sm text-zinc-600 dark:text-zinc-400 capitalize"
        >{publishDate.toDateString()}</small
      >
      <small class="text-sm text-zinc-400">
        {body && readingTime(body, 30).text}
      </small>{" "}
    </div>
    <h5 class="text-2xl text-zinc-800 dark:text-zinc-200 capitalize mt-2">
      <a href={`/blog/${slugify(title)}`}> {title}</a>
    </h5>
  </div>
</li>
